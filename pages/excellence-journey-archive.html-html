<style>
    .experience-section {
        padding: calc(80px + 2rem) 0 4rem;
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    }

    .experience-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .experience-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--dark-bg);
        margin-bottom: 1rem;
    }

    .experience-header p {
        font-size: 1.125rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto;
    }

    .experience-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .experience-card {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .experience-card::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, #f59e0b, #d97706);
    }

    .experience-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .experience-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #f59e0b, #d97706);
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 5px 15px rgba(245, 158, 11, 0.3);
    }

    .experience-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-bg);
        margin-bottom: 0.5rem;
    }

    .experience-company {
        font-size: 1.125rem;
        font-weight: 600;
        color: #f59e0b;
        margin-bottom: 0.5rem;
    }

    .experience-period {
        font-size: 0.875rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .experience-period i {
        color: #f59e0b;
    }

    .experience-description {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }

    .experience-achievements {
        margin-bottom: 1.5rem;
    }

    .experience-achievements h4 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark-bg);
        margin-bottom: 0.75rem;
    }

    .experience-achievements ul {
        list-style: none;
        padding-right: 0;
    }

    .experience-achievements li {
        position: relative;
        padding-right: 1.5rem;
        margin-bottom: 0.5rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .experience-achievements li::before {
        content: '✓';
        position: absolute;
        right: 0;
        color: #f59e0b;
        font-weight: bold;
    }

    .experience-technologies {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        background: #fef3c7;
        color: #92400e;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .certifications-section {
        margin-top: 4rem;
        padding: 3rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .certifications-section h2 {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-bg);
        margin-bottom: 2rem;
    }

    .certifications-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .certification-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: #fef3c7;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .certification-item:hover {
        transform: translateX(-5px);
        box-shadow: 0 5px 15px rgba(245, 158, 11, 0.2);
    }

    .certification-item i {
        font-size: 2rem;
        color: #f59e0b;
    }

    .certification-info h4 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark-bg);
        margin-bottom: 0.25rem;
    }

    .certification-info p {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    @media (max-width: 768px) {
        .experience-header h1 {
            font-size: 2rem;
        }

        .experience-grid {
            grid-template-columns: 1fr;
        }

        .certifications-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
